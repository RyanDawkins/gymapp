<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.Gym" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryDark">@color/light_blue_700</item>

        <item name="colorAccent">@color/blue_a200</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Gym.Actionbar" parent="Theme.AppCompat">
        <item name="android:background">@color/light_blue_500</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>